<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GuaranteeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/guarantee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Guarantee"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="      All our products will be warranted\nwithin 1 year. We will repair the products\n           as soon as there is an error."
        android:textSize="15dp"
        android:textColor="#80000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_marginRight="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#40FFCA27"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_marginRight="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_toRightOf="@id/rl1"
            android:background="#40FFCA27"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_marginRight="5dp"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_toRightOf="@id/rl2"
            android:background="#40FFCA27"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_marginRight="5dp"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_toRightOf="@id/rl3"
            android:background="#FFCA27"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:backgroundTint="#FFCA27"
        android:layout_marginTop="30dp"/>

</LinearLayout>